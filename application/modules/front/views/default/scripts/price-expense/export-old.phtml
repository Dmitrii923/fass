		// 輸出先販売価格
		var price_domestic             = parseInt($('.price_domestic').html().split(',').join('').trim());
		var percentage_sales_price     = parseInt($('.percentage_sales_price').val().split(',').join('').trim()) / 100;
		var price_export               = (price_domestic * percentage_sales_price).toFixed(0);
		$('.price_export').html(price_export);
	
		// 卸価格
		var price_export                = parseInt($('.price_export').html().split(',').join('').trim());
		var percentage_wholesale_price  = parseInt($('.percentage_wholesale_price').val().split(',').join('').trim());
		var wholesale_price             = (price_export * percentage_wholesale_price).toFixed(2);
		$('.wholesale_price').html(wholesale_price);
	
		
		$('.domestic_work').html(unit_work_cost);
		$('.transport_cost').html(unit_transport_cost);
		
		var domestic_work  = parseInt($('.domestic_work').html().split(',').join('').trim());
		var transport_cost = parseInt($('.transport_cost').html().split(',').join('').trim());
	
		$('.maritime_insurance').html((wholesale_price + domestic_work + transport_cost) * 0.1).toFixed(2);;

		$('.cif').html(domestic_work + transport_cost);
	
		var cif                        = Number($('.cif').html());
		$('.cif_price').html(domestic_work + transport_cost + cif);
	});
});    
</script>
