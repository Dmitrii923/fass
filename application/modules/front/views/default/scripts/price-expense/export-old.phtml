<script type="text/javascript">
$(function () {
	$('input').on('input', function(e) {
  		var unit_work_cost             = parseInt($('.unit_work_cost').html().split(',').join('').trim());
  		var unit_work_per              = parseInt($('.unit_work_per').html().split(',').join('').trim());
